
(library
  (name fb)
  (wrapped false)
  (preprocess 
    (pps ppx_deriving.show))
  (modules
    fbdk
    debugutils
    version
    fbast
    fbinterp
    fblexer
    fboptions
    fbparser
    fbpp
    fbtype)
  (private_modules
    version
    fbast
    fbinterp
    fblexer
    fboptions
    fbparser
    fbpp
    fbtype))
 
(ocamllex (modules fblexer))
(menhir (modules fbparser))

(executable
  (name interpreter)
  (modules interpreter)
  (preprocess 
    (pps ppx_deriving.show))
  (libraries
    fb))

(toplevel
  (name toplevel)
  (libraries utop fb))

(alias
  (name distributables)
  (deps
    interpreter.exe
    toplevel.exe))

(copy_files
  (files %{project_root}/build_scripts/*.*))
  